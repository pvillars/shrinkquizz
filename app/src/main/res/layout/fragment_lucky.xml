<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anpetrus.shrinkquizz.LuckyFragment">

<CheckBox
    android:id="@+id/happyCb"
    android:text="¿Estás Feliz?"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/moodCb"
        android:layout_below="@id/happyCb"
        android:button="@drawable/cb_mood_bg"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_marginBottom="8dp"/>
    <Button
        android:layout_marginBottom="54dp"
        android:id="@+id/luckyBtn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
